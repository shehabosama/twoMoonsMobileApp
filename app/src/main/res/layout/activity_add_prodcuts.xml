<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Ui.Activities.AddProducts.AddProductsActivity"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اضافه منتج موجود"
            android:textStyle="bold"
            android:id="@+id/add_exists_project"
            android:layout_marginHorizontal="20dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اضافه منتج جديد"
            android:textStyle="bold"
            android:id="@+id/add_new_product"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginVertical="5dp"
            android:id="@+id/text_result"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_view"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AddProductsList"
            android:text="اضافه القائمه الي المنتجات"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="5dp"
            android:visibility="gone"
            />
    </LinearLayout>
</layout>